---
import { Image } from "astro:assets";
import type { Code } from "astro:components";

const { title, img = "", text, classes = "" } = Astro.props;
---

<div
  class:list={[
    "flex flex-col w-full justify-start items-center mt-12",
    classes,
  ]}
>
  <div
    class="will-change-transformaspect-square rounded-lg w-full border-2 border-neutral-500 max-w-2xl -translate-y-4 translate-x-2 rotate-2 shadow-2xl"
  >
    <div
      class="will-change-transform text-center aspect-square rounded-lg w-full border-2 border-neutral-500 max-w-2xl translate-y-4 -translate-x-2 -rotate-2 flex flex-col items-center p-8 md:p-12 lg:p-16"
    >
      {
        img && (
          <Image
            src={img}
            alt={title + ": une illustration"}
            width={800}
            height={800}
            class="w-2/3 max-w-lg z-10"
          />
        )
      }
      <h2 class="text-xl lg:text-2xl font-semibold mb-4">{title}</h2>
      <p
        class="will-change-transform text-lg font-neutral-900 font-light lg:text-xl px-4 lg-px-8 py-4 text-center subpixel-antialiased"
      >
        {text}
      </p>
      <slot />
    </div>
  </div>
</div>
