---
const menuItems = [{name:"Démarche", link:"/démarche"},{name:"Réalisations", link:"/portfolio"},{name:"Contact", link:"/contact"}, ]

---
<nav id="main-nav" class="w-10/12 flex items-center justify-between mx-auto group h-20">
	<a class="mr-auto z-50  w-11 " href="/">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class=" h-12 md:h-16 w-auto">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.25 9.75L16.5 12l-2.25 2.25m-4.5 0L7.5 12l2.25-2.25M6 20.25h12A2.25 2.25 0 0020.25 18V6A2.25 2.25 0 0018 3.75H6A2.25 2.25 0 003.75 6v12A2.25 2.25 0 006 20.25z" />
          </svg>  </a>
  <button class="mobile-dropdown-toggle md:hidden  z-50" aria-hidden="true">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-8 md:h-12 w-auto">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 5.25h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5" />
      </svg>
        </button>
  <div class="dropdown-link-container z-10 fixed top-0 left-0 right-0 w-full h-screen  bg-neutral-100 dark:bg-neutral md:gap-5 opacity-0 -translate-y-full transition-all duration-500 group-[.is-open]:translate-y-0 group-[.is-open]:opacity-100 md:opacity-100 md:bg-transparent md:h-fit md:relative md:translate-y-0 md:w-full">
   <ul class=" pt-32 md:pt-0  px-20 relative flex flex-col w-full  md:flex-row gap-10  md:px-0 md:gap-4 md:items-end md:w-fit md:ml-auto">
    {menuItems.map(item => 
        <li class="w-1/2 border-b border-neutral-400 pb-4 md:border-none md:pb-0">
            <a class="font-semibold text-xl md:text-base" href={item.link}>{item.name}</a>
        </li>)}
   </ul>
   
  </div>
</nav>

<script>
    // get a ref to our navbar (assuming it has this id)
const navElement = document.getElementById("main-nav");
const buttonElement = document.querySelector("button");

buttonElement.addEventListener("click", (event) => {
    navElement.classList.toggle("is-open");
    console.log('click', event)
});


</script>