---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "@fontsource/poppins/100.css";
import "@fontsource/poppins/200.css";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "@fontsource/poppins/800.css";
import "@fontsource/poppins/900.css";
import "../style/base.css";
import Navbar from "../components/Navbar.astro";
import ContactForm from "../components/ContactWidget.astro";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <!-- Mofifier le contenu ici  -->
    <meta name="description" content="Astro description" />
    <!-- <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" /> -->
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="overflow-x-hidden font-sans bg-neutral-900 flex justify-center">
    <script is:inline src="../lib/analytics.js"></script>
    <div
      id="content-container"
      class="relative w-screen h-full min-h-screen flex justify-center bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-gray-100 to-gray-400 via-slate-200"
    >
      <Navbar />
      <ContactForm />
      <slot />
    </div>
  </body>
</html>
